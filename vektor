#include <stdio.h>
#define MAX 10 

int find(int x, int f[MAX],int* index){                             // ueberprueft ob x in f[MAX] vorhanden ist
    for(int i = 0; i < MAX; i++){                                   
        if(x == f[i]){
            *index = i;                                             //position von x wird in index gespeichert
            return 1;
        }
    }
    return 0;
}



int main() {

    int index, count;
    int vektor[MAX] = { 3, 5, 4, 6, 2, 1, 7, 8, 17, 12 };
    int vektor2[MAX] = { 1, 2, 17, 4, 6, 10, 5, 8, 7, 9 };

    printf("Bitte Zahl eingeben!\n");
    scanf("%d",&count);

    if (find(count,vektor,&index) == 1){
        printf("Die Zahl wurde in Vektor 1 an der Stelle: %d gefunden!\n",index+1);
        index = 0;
    }

    if(find(count,vektor2,&index)) {
        printf("Die Zahl wurde in Vektor 2 an der Stelle: %d gefunden!\n", index+1);
        index = 0;
    }

    return 0;
}
